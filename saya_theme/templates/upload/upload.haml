-extends "base.haml"
-load bootstrap3
-load staticfiles

-block content
  -# put here to allow DjangoResumable to get it
  -csrf_token

  %div{ng-app: "soya", ng-controller: "VideoUploadController"}
    %div{ng-repeat: "upload in uploads"}
      %form{method: "post"}
        %fieldset
          -csrf_token
          =form.as_p
        %button.btn.btn-primary{type: "submit"}
          Send

    %button.btn.btn-primary{ng-click: "addUpload()"}
      Uploader une vid√©o en plus

- block javascript
  %script{type: "text/javascript", src: "https://raw.github.com/23/resumable.js/master/resumable.js"}
  %script{src:"{{ STATIC_URL }}js/django-resumable.js", type:"text/javascript"}
  %script{src:"{% static 'resumable/js/init.js' %}", type:"text/javascript"}
  %script{src: "{{ STATIC_URL }}js/upload.js"}
